resposta = input ("Você deseja calcular sua idade? : \n 1.Sim \n 2.Sair \n ")

while resposta == "sim":
	nome = input("Digite o seu nome: ")
	sobrenome = input("Digite seu sobrenome:")
	ano_nascimento= int(input ("Digite o ano de seu nascimento"))

	if ano_nascimento == 2022:
		print("Você tem menos de 1 ano")
	elif ano_nascimento > 1922 or ano_nascimento < 2021:
		resultado = 2022 - int (ano_nascimento)
		print (nome, "você tem", resultado, "anos!")
	else:
		print("Ano inferior a 1922")
while resposta == "sair":
	print ("Programa encerrado")
	break
while resposta != "sim" or "sair":
	print ("opção invalida")
	break
