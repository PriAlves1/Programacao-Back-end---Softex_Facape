# funcao +
def adicao(numero_1,numero_2):
	return numero_1 + numero_2
	
# funcao +
def subtracao(numero_1,numero_2):
	return numero_1 - numero_2

# funcao +
def multiplicacao(numero_1,numero_2):
	return numero_1 * numero_2

# funcao +
def divisao(numero_1,numero_2):
	return numero_1 / numero_2

print ("\n Calculadora: \n Operações disponíveis: \n A - adicao \n S - subtracao \n M - multiplicacao \n D - divisao \n")

a=int(input("Digite o primeiro número: "))
b=int(input("Digite o segundo número: "))

escolha = str(input("Escolha a operacao:"))



if escolha == 'a':
	print(adicao(a,b))

elif escolha == 's':
    print(subtracao(a,b))


elif escolha == 'm':
	print(multiplicacao(a,b))


elif escolha == 'd':
	print (divisao(a,b))
	
else:
    print('0')
